<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="content" method="upgrade">
	<name>Simple Image Gallery (by Ale)</name>
	<author>TeddyNet</author>
	<authorEmail>please-use-the-contact-form@teddynet.net</authorEmail>
	<authorUrl>www.teddynet.net</authorUrl>
	<copyright>Copyright (c) 2013 Teddynet.net All rights reserved.</copyright>
	<creationDate>Sept 3rd, 2013</creationDate>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<version>1.0.0</version>
	<description>JW_PLG_SIG_XML_DESC</description>
	<!-- Parameters -->
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="galleries_rootfolder" type="text" default="images" label="JW_PLG_SIG_ROOTFOLDER" description="JW_PLG_SIG_ROOTFOLDER_DESC" />
				<field name="jQueryHandling" type="list" default="1.8" label="JW_PLG_SIG_JQUERY_HANDLING" description="JW_PLG_SIG_JQUERY_HANDLING_DESC">
					<option value="0">JW_PLG_SIG_DO_NOT_LOAD_THE_JQUERY_LIBRARY</option>
					<option value="1.5">JW_PLG_SIG_LOAD_V1_5_X_LATEST_COPY</option>
					<option value="1.6">JW_PLG_SIG_LOAD_V1_6_X_LATEST_COPY</option>
					<option value="1.7">JW_PLG_SIG_LOAD_V1_7_X_LATEST_COPY</option>
					<option value="1.8">JW_PLG_SIG_LOAD_V1_8_X_LATEST_COPY</option>
					<option value="1.9">JW_PLG_SIG_LOAD_V1_9_X_LATEST_COPY</option>
					<option value="1">JW_PLG_SIG_LOAD_LATEST_COPY</option>
				</field>
				<field name="thb_width" type="text" default="200" size="3" label="JW_PLG_SIG_TW" description="JW_PLG_SIG_TW_DESC" />
				<field name="thb_height" type="text" default="400" size="3" label="JW_PLG_SIG_TH" description="JW_PLG_SIG_TH_DESC" />
				<field name="jpg_quality" type="text" default="100" size="3" label="JW_PLG_SIG_TQ" description="JW_PLG_SIG_TQ_DESC" />
			</fieldset>
			<fieldset name="advanced">
				<field name="cache_expire_time" type="text" default="1440" size="3" label="JW_PLG_SIG_TCEXP" description="JW_PLG_SIG_TCEXP_DESC" />
				<field name="memoryLimit" type="text" default="" size="3" label="JW_PLG_SIG_ML" description="JW_PLG_SIG_ML_DESC" />
			</fieldset>
		</fields>
	</config>
	<!-- Files -->
	<files folder="plugin" destination="jw_sig_ale">
		<filename plugin="jw_sig_ale">jw_sig_ale.php</filename>
		<filename plugin="jw_sig_ale">jw_sig_ale.xml</filename>
		<folder>jw_sig_ale</folder>
	</files>
	<media folder="plugin/media" destination="jw_sig_ale">
		<filename>SIG_300x94.png</filename>
	</media>
	<languages folder="plugin">
		<language tag="en-GB">language/en-GB/en-GB.plg_content_jw_sig_ale.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.plg_content_jw_sig_ale.sys.ini</language>
	</languages>
	<updateservers>
		<server type="extension" priority="1" name="Simple Image Gallery">http://www.joomlaworks.net/updates/jw_sig_ale.xml</server>
	</updateservers>
</extension>
